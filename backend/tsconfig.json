{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "#/*": [
                "lib/*"
            ]
        },
    },
    "jest": {
        "globals": {
            "prisma": "prismaMock"
        }
    },
    "exclude": [
        "lib/__tests__",
        "__mocks__",
        "scripts",
    ],
    "include": [
        "./src/**/*", "./lib/**/*", "lib/enums", "lib/interfaces", "lib/services",
    ],
}